getwd()
setwd("D:/2024/Internships/AI_Omics_Internship_2025/")
dir.create("raw_data")
dir.create("clean_data")
dir.create("script")
dir.create("results")
dir.create("plots")
data= read.csv(choose.files("patient_info"))
str(data)
data$age= as.numeric(data$age)
data$bmi= as.numeric(data$bmi)
data$gender= as.factor(data$gender)
data$diagnosis=as.factor(data$diagnosis)
data$smoker=as.factor(data$smoker)
data$smoking_binary=ifelse(data$smoker == "Yes", 1, 0)
data$smoking_binary=factor(data$smoking_binary,levels=c(1,0),labels=c("Yes","No"))
patient_info_clean= c(data)
write.csv(patient_info_clean, file = "D:/2024/Internships/AI_Omics_Internship_2025/clean_data/patient_info_clean.csv")
